<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/background_motain_sky">
<EditText
    android:id="@+id/edit_text_register_name"
    android:layout_width="350dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:textColorHint="@color/white"
    android:paddingLeft="30dp"
    android:hint="Name"
    android:textSize="25dp"
    android:background="@drawable/edit_text_shape"
    android:layout_marginTop="70dp"
    />
    <EditText
        android:id="@+id/edit_text_register_email"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        android:paddingLeft="30dp"
        android:hint="Email"
        android:textSize="25dp"
        android:background="@drawable/edit_text_shape"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edit_text_register_password"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        android:paddingLeft="30dp"
        android:hint="Password"
        android:textSize="25dp"
        android:background="@drawable/edit_text_shape"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/button_register"
        android:text="Register"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/text_view_register_clicktext_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Already have acoount? Click Here"
        android:textStyle="italic"
        android:textColor="@color/blue"/>
</LinearLayout>